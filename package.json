{
  "name": "haml-lint",
  "displayName": "Haml Lint",
  "description": "Haml Lint for Visual Studio Code",
  "version": "0.0.2",
  "publisher": "aki77",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aki77/vscode-haml-lint.git"
  },
  "bugs": {
    "url": "https://github.com/aki77/vscode-haml-lint/issues"
  },
  "license": "MIT",
  "activationEvents": [
    "onLanguage:haml"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Haml Lint Configuration",
      "properties": {
        "hamlLint.executablePath": {
          "type": "string",
          "default": "haml-lint",
          "description": "Path to haml-lint executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/execa": "^0.9.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "execa": "^0.10.0"
  }
}
