{
  "name": "haml-lint",
  "displayName": "Haml Lint",
  "description": "Haml Lint for Visual Studio Code",
  "version": "0.1.0",
  "publisher": "aki77",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aki77/vscode-haml-lint.git"
  },
  "bugs": {
    "url": "https://github.com/aki77/vscode-haml-lint/issues"
  },
  "license": "MIT",
  "activationEvents": [
    "onLanguage:haml"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Haml Lint",
      "properties": {
        "hamlLint.executablePath": {
          "type": "string",
          "default": "haml-lint",
          "description": "Path to haml-lint executable"
        },
        "hamlLint.useBundler": {
          "type": "boolean",
          "default": false,
          "description": "Use `bundle exec` to run haml-lint. (If this is true, the hamlLint.executablePath setting is ignored.)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "execa": "^2.0.3"
  }
}
